{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">title</th>
        <th scope="col">content</th>
    </tr>
    </thead>
    <tbody>
<!--掲示文情報-->
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<a href = "/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href = "/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>

